<?xml version="1.0" encoding="utf-8"?>
<!-- User registration form with username, email, phone, and password fields -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FBFAFA"
    android:orientation="vertical"
    android:padding="16dp">


    <ImageView
        android:id="@+id/imageView7"
        android:layout_width="match_parent"
        android:layout_height="129dp"
        app:srcCompat="@drawable/logo_hair_salon" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        android:fontFamily="sans-serif-medium"
        android:gravity="center"
        android:padding="8dp"
        android:text="Register"
        android:textColor="#100202"
        android:textSize="24sp" />

    <EditText
        android:id="@+id/usernameRegister"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginBottom="8dp"
        android:background="@drawable/rounded_bg"
        android:hint="Username"
        android:paddingStart="8dp"
        android:textColor="#FFFFFF"
        android:textColorHint="#010407" />

    <EditText
        android:id="@+id/emailRegister"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginBottom="8dp"
        android:background="@drawable/rounded_bg"
        android:hint="Email"
        android:inputType="textEmailAddress"
        android:paddingStart="8dp"
        android:textColor="#FFFFFF"
        android:textColorHint="#000407" />

    <EditText
        android:id="@+id/phoneField"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginBottom="8dp"
        android:background="@drawable/rounded_bg"
        android:hint="Phone Number"
        android:inputType="phone"
        android:paddingStart="8dp"
        android:textColor="#FFFFFF"
        android:textColorHint="#01080F" />

    <EditText
        android:id="@+id/passwordRegister"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginBottom="8dp"
        android:background="@drawable/rounded_bg"
        android:hint="Password"
        android:inputType="textPassword"
        android:paddingStart="8dp"
        android:textColor="#FFFFFF"
        android:textColorHint="#010A10" />

    <EditText
        android:id="@+id/confirmPasswordRegister"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginBottom="8dp"
        android:background="@drawable/rounded_bg"
        android:hint="Confirm Password"
        android:inputType="textPassword"
        android:paddingStart="8dp"
        android:textColor="#FFFFFF"
        android:textColorHint="#01060B" />


    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/register_buttonRegister"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:backgroundTint="#5BF8C5"
        android:text="Register" />
</LinearLayout>
