<?xml version="1.0" encoding="utf-8"?>
<!--
    Background drawable for the announcement edit text dialog.
    This defines the visual style of the text input area where the hairdresser/admin
    can edit announcements
-->
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">


    <solid android:color="#FFFFFF" />

    <stroke
        android:width="1dp"
        android:color="#FFFFFF" />

    <corners android:radius="8dp" />

    <padding
        android:left="12dp"
        android:top="12dp"
        android:right="12dp"
        android:bottom="12dp" />
</shape>
